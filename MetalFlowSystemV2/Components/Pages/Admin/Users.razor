@page "/admin/users"
@layout EmptyLayout
@rendermode InteractiveServer
@attribute [Authorize(Roles = "Admin")]
@using MetalFlowSystemV2.Data
@using MetalFlowSystemV2.Data.Entities
@using MetalFlowSystemV2.Data.Services.Admin
@using MetalFlowSystemV2.Components.Pages.Admin.Dialogs
@inject UserAdminService UserService
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<AdminLayout>
    <MudText Typo="Typo.h5" Class="mb-4">User Management</MudText>

    <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" OnClick="OpenCreateDialog" Class="mb-4">Create User</MudButton>

    <MudTable Items="_users" Hover="true" Loading="_loading">
        <HeaderContent>
            <MudTh>Email</MudTh>
            <MudTh>Full Name</MudTh>
            <MudTh>Branches</MudTh>
            <MudTh>Actions</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Email">@context.Email</MudTd>
            <MudTd DataLabel="Full Name">@context.FullName</MudTd>
            <MudTd DataLabel="Branches">
                 @if (context.UserBranches != null && context.UserBranches.Any())
                {
                    <div class="d-flex flex-wrap gap-1">
                        @foreach (var ub in context.UserBranches)
                        {
                            <MudChip T="string" Size="Size.Small" Color="@(ub.IsDefault ? Color.Primary : Color.Default)" Variant="Variant.Outlined">
                                @(ub.Branch?.Code ?? ub.BranchId.ToString())
                                @if(ub.IsDefault) { <MudIcon Icon="@Icons.Material.Filled.Star" Size="Size.Small" Class="ml-1"/> }
                            </MudChip>
                        }
                    </div>
                }
                else
                {
                    <span class="mud-text-secondary">No Access</span>
                }
            </MudTd>
            <MudTd DataLabel="Actions">
                <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" Size="Size.Small" OnClick="@(() => OpenEditDialog(context))" />
            </MudTd>
        </RowTemplate>
    </MudTable>
</AdminLayout>

@code {
    private List<ApplicationUser> _users = new();
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        _loading = true;
        try
        {
            // We need to fetch users WITH branches for display
            // GetAllUsersAsync returns List<ApplicationUser>, but does it include branches?
            // UserAdminService.GetAllUsersAsync returns _userManager.Users.ToListAsync().
            // This does NOT include navigation properties by default in EF Core Identity unless lazy loading (not recommended) or explicit include.
            // But UserAdminService doesn't expose an Include method on GetAllUsersAsync.
            // I should verify UserAdminService.GetAllUsersAsync implementation.

            // Checking UserAdminService.cs content earlier:
            // public async Task<List<ApplicationUser>> GetAllUsersAsync() { return await _userManager.Users.ToListAsync(); }
            // This likely doesn't include UserBranches.

            // I need to update UserAdminService to include branches or use a different method.
            // Let's assume I need to fetch them.
            // I'll update UserAdminService to fetch branches in GetAllUsersAsync or add a new method.

            // Actually, I'll update UserAdminService.GetAllUsersAsync to include relations.
            // Wait, I can't easily modify UserManager query without casting to IQueryable of DbContext if using Stores.
            // But UserAdminService has _context.

            _users = await UserService.GetAllUsersWithBranchesAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading users: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task OpenCreateDialog()
    {
        var options = new DialogOptions { BackdropClick = false, CloseOnEscapeKey = false, MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = await DialogService.ShowAsync<UserDialog>("Create User", options);
        var result = await dialog.Result;

        if (result != null && !result.Canceled)
        {
            await LoadData();
        }
    }

    private async Task OpenEditDialog(ApplicationUser user)
    {
        var parameters = new DialogParameters { ["User"] = user };
        var options = new DialogOptions { BackdropClick = false, CloseOnEscapeKey = false, MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = await DialogService.ShowAsync<UserDialog>("Edit User", parameters, options);
        var result = await dialog.Result;

        if (result != null && !result.Canceled)
        {
            await LoadData();
        }
    }
}
