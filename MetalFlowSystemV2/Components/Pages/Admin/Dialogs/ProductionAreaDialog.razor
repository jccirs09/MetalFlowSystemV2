@using MetalFlowSystemV2.Data.Entities
@using MetalFlowSystemV2.Data.Services.Admin
@inject ProductionAreaAdminService ProductionAreaService
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success">
            <MudTextField @bind-Value="model.Code" Label="Code" Required="true" RequiredError="Code is required" MaxLength="20" />
            <MudTextField @bind-Value="model.Name" Label="Name" Required="true" RequiredError="Name is required" MaxLength="100" />
            <MudSelect @bind-Value="model.AreaType" Label="Type" Required="true" AnchorOrigin="Origin.BottomCenter">
                @foreach (ProductionAreaType type in Enum.GetValues(typeof(ProductionAreaType)))
                {
                    <MudSelectItem Value="@type">@type</MudSelectItem>
                }
            </MudSelect>
            <MudCheckBox @bind-Value="model.IsActive" Label="Active" Color="Color.Primary" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }

    [Parameter] public ProductionArea? ProductionArea { get; set; }
    [Parameter] public int BranchId { get; set; }

    private ProductionArea model = new();
    private MudForm form;
    private bool success;

    protected override void OnInitialized()
    {
        if (ProductionArea != null)
        {
            model = new ProductionArea
            {
                Id = ProductionArea.Id,
                BranchId = ProductionArea.BranchId,
                Code = ProductionArea.Code,
                Name = ProductionArea.Name,
                AreaType = ProductionArea.AreaType,
                IsActive = ProductionArea.IsActive
            };
        }
        else
        {
            model.BranchId = BranchId;
        }
    }

    private async Task Submit()
    {
        await form.Validate();

        if (success)
        {
            try
            {
                if (model.Id == 0)
                {
                    await ProductionAreaService.CreateAsync(model);
                    Snackbar.Add("Production Area created", Severity.Success);
                }
                else
                {
                    await ProductionAreaService.UpdateAsync(model);
                    Snackbar.Add("Production Area updated", Severity.Success);
                }
                MudDialog.Close(DialogResult.Ok(true));
            }
            catch (Exception ex)
            {
                Snackbar.Add(ex.Message, Severity.Error);
            }
        }
    }

    private void Cancel() => MudDialog.Cancel();
}
