@inherits LayoutComponentBase
@using MudBlazor

<MudThemeProvider Theme="MudThemeConfig.DefaultTheme" />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">MetalFlowSystemV2</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu OnLinkClick="CloseDrawer" />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-4 pt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    void CloseDrawer()
    {
        // Only close on small screens? Requirement says "Close side drawer on navigation".
        // Assuming this is the desired behavior to fix "remains open" issue.
        // If the drawer is set to Permanent on Desktop (ClipMode.Always implies it might be),
        // MudDrawer handles responsiveness. If it's persistent/docked, setting Open=false hides it.
        // We will strictly follow the requirement to close it.
        _drawerOpen = false;
    }
}
